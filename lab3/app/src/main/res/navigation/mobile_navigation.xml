<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    app:startDestination="@+id/home_dest">
    <fragment
        android:id="@+id/home_dest"
        android:name="com.example.lab3.ui.fragments.HomeFragment"
        android:label="Home"
        tools:layout="@layout/fragment_home">
        <action
            android:id="@+id/to_game"
            app:destination="@+id/game_dest">
        </action>
        <action
            android:id="@+id/to_user"
            app:destination="@id/user_dest"/>
    </fragment>
    <fragment
        android:id="@+id/game_dest"
        android:name="com.example.lab3.ui.fragments.GameFragment"
        android:label="Game"
        tools:layout="@layout/fragment_game">
        <argument app:argType="string"
            android:name="ID"/>
        <argument app:argType="boolean"
            android:name="isHost"/>
    </fragment>
    <fragment
        android:id="@+id/user_dest"
        android:name="com.example.lab3.ui.fragments.UserFragment"
        android:label="User"
        tools:layout="@layout/fragment_user"/>
</navigation>